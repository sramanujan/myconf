#!/bin/bash
function install()
{
    cd ~
    rm -rf myconf
    git clone --recursive https://github.com/sramanujan/myconf.git
}
function update()
{
    cd ~/myconf
    git pull origin master
    git submodule update --recursive --init
}
cd ~
if [ ! -d "myconf" ]; then 
    install; 
else
    if [ ! -d "myconf/.git" ]; then
        install;
    else
        update;
    fi
fi
echo "Pull complete"
bash ~/myconf/scripts/post-install
echo "Install complete"
exit
